<div class="{{home}}">
<article class="speakerslist">
    <section class="layout">
        <div class="speakers"
        ng-repeat="item in artists">

              <!-- // ng-repeat -->
                <article class="artists group">
                  <div ng-show="home">
                    <h3>{{ item.title }}
                        <span class="small">with
                        </div>
                            <a href="/#!speakers/{{artists.indexOf(item)}}">
                                {{ item.name }}
                                <!-- //change with double curlys -->
                            </a>
                        </span>
                    </h3>
                    <p>
                        <a href="/#!speakers/{{item.shortname}}">
                            <img class="speaker" src="/images/speakers/{{item.shortname}}_tn.jpg" alt="Photo of {{item.shortname}}">
                        </a>
                    </p>
                    <p ng-show="speakers" ng-bind-html="item.description"></p>
                    <div ng-show="details">
                      <h3>{{ item.title }}
                          <span class="small">with
                          </div>
                              <a href="/#!speakers/{{item.shortname}}">
                                  {{ item.name }}
                                  <!-- //change with double curlys -->
                              </a>
                          </span>
                      </h3>
                      <p>
                          <a href="/#!speakers/{{item.shortname}}">
                              <img class="speaker" src="/images/speakers/{{item.shortname}}_tn.jpg" alt="Photo of {{item.shortname}}">
                          </a>
                      </p>
                      <p ng-bind-html="item.description"></p>
                    </div>


                </article>
        </div>
    </section>
</article>
</div>
